<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".view.loginAccount.Start2Fragment">

    <TextView
        android:id="@+id/tvFSEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Email"
        android:textColor="@color/set2White"
        app:layout_constraintBaseline_toBaselineOf="@+id/etFSEmail"
        app:layout_constraintLeft_toLeftOf="parent" />
    <EditText
        android:id="@+id/etFSEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="이메일을 입력하세요."
        android:inputType="textEmailAddress"
        android:textColorHint="@color/set2White"
        android:textColor="@color/set2White"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tvFSEmail"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tvFSPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Password"
        android:textColor="@color/set2White"
        app:layout_constraintBaseline_toBaselineOf="@+id/etFSPassword"
        app:layout_constraintLeft_toLeftOf="parent" />
    <EditText
        android:id="@+id/etFSPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="비밀번호를 입력하세요."
        android:textColorHint="@color/set2White"
        android:textColor="@color/set2White"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@+id/etFSEmail"
        app:layout_constraintLeft_toRightOf="@+id/tvFSPassword"
        app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/etFSPassword"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center">
        <Button
            android:id="@+id/btnFSLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/set2GrayBlue"
            android:text="로그인"
            android:layout_marginRight="4dp"/>
        <Button
            android:id="@+id/btnFSJoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/set2GrayBlue"
            android:text="이메일로 가입"
            android:layout_marginLeft="4dp"/>

    </LinearLayout>
    
</android.support.constraint.ConstraintLayout>
