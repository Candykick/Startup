<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="fragment"
            type="com.candykick.startup.view.marketAct.addNewMarket.BasicDataFragment"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/set2Black"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/tvBasicDataTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서비스 이름"
            android:textColor="@color/set2White"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />
        <EditText
            android:id="@+id/etANMTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="서비스 이름을 입력해주세요."
            android:inputType="textPersonName"
            android:background="@drawable/bordergrid2"
            android:textColor="@color/set2White"
            android:textSize="15sp"
            android:textColorHint="@color/set2White"
            app:layout_constraintTop_toBottomOf="@+id/tvBasicDataTitle1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingLeft="10dp"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/tvBasicDataTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카테고리"
            android:textColor="@color/set2White"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/etANMTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />
        <TextView
            android:id="@+id/tvBasicDataTitle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상위 카테고리"
            android:textColor="@color/set2White"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/tvBasicDataTitle2"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" />
        <Spinner
            android:id="@+id/spANMFirstCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"
            app:layout_constraintLeft_toRightOf="@+id/tvBasicDataTitle3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvBasicDataTitle3"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
        <TextView
            android:id="@+id/tvBasicDataTitle4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="하위 카테고리"
            android:textColor="@color/set2White"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/tvBasicDataTitle3"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" />
        <Spinner
            android:id="@+id/spANMSecondCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"
            app:layout_constraintLeft_toRightOf="@+id/tvBasicDataTitle4"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvBasicDataTitle4"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

    </android.support.constraint.ConstraintLayout>
</layout>