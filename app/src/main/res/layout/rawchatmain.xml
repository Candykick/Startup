<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@color/set2Black">

    <!--ImageView 원래 크기: 150 * 103-->

    <ImageView
        android:id="@+id/ivChatMainRaw"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:layout_marginLeft="12dp">
        <TextView
            android:id="@+id/tvChatMainNameRaw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="김진영"
            android:textColor="@color/set2White"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/tvChatMainChatRaw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="개발자님 카톡 보시면 연락 주세요"
            android:textColor="@color/set2White"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:layout_marginLeft="12dp">
        <TextView
            android:id="@+id/tvChatMainDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:text="7월 6일"
            android:textColor="@color/set2White" />
        <TextView
            android:id="@+id/tvChatMainNotRead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:text="신규 3개"
            android:textColor="@color/set2White" />
    </LinearLayout>

</LinearLayout>