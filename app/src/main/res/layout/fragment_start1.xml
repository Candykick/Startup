<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".view.loginAccount.Start1Fragment">

    <Button
        android:id="@+id/btnLgKakao"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:background="@drawable/kakaologin" />

    <Button
        android:id="@+id/btnLgGoogle"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:background="@drawable/googlelogin" />

    <Button
        android:id="@+id/btnLgEmail"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:background="@drawable/emaillogin" />

</LinearLayout>
