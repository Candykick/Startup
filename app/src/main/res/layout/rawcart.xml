<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="82dp"
    android:orientation="vertical"
    android:background="@color/set2Black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!--ImageView 원래 크기: 150 * 103-->

        <ImageView
            android:id="@+id/ivCartProfile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="8dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:layout_marginLeft="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tvCartName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="우수몽"
                    android:textColor="@color/set2White"
                    android:textSize="18sp"/>
                <ImageView
                    android:id="@+id/tvCartAlarmType"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/circle_border_yellow"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tvCartUserInfo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="남, 20세~24세"
                android:textColor="@color/set2White"/>
            <TextView
                android:id="@+id/tvCartUserInfo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="대표, 개발자, 기획자"
                android:textColor="@color/set2White"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:visibility="gone"
        android:id="@+id/dividerCart"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/newsetGrayWhite"/>
</LinearLayout>