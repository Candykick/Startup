<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@color/set2Black">

    <ImageView
        android:id="@+id/ivMarketMain"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="12dp">
        <TextView
            android:id="@+id/tvMarketMainName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마마마마마소비자만족마위마로고마마마디자인마마수정무마..."
            android:textColor="@color/set2White"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/star"/>
            <TextView
                android:id="@+id/tvMarketMainInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.0 | 246명의 평가"
                android:textColor="@color/set2White"
                android:textSize="13sp"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvMarketMainPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="20,000원~"
            android:textColor="@color/set2White"/>
    </LinearLayout>

</LinearLayout>